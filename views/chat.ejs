<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('partials/head'); -%>
  </head>
  <body>
    <%- include('partials/navigation'); -%> <%- include('partials/header'); -%>
    <center style="height: 1100px">
      <h1 id="header" class="waviy">
        <span style="--i: 0">C</span>
        <span style="--i: 1">h</span>
        <span style="--i: 2">a</span>
        <span style="--i: 3">t</span>
      </h1>
      <hr />

      <div style="display: flex; margin-left: 20px">
        <div
          style="
            flex: 0;
            border: solid;
            border-radius: 5px;
            min-width: 33vh;
            margin: 20px;
          "
        >
          <table id="chatUsers"></table>
        </div>

        <div style="flex: 0; border: solid; border-radius: 5px; margin: 20px">
          <div
            id="texts"
            style="
              border: 1px solid black;
              width: 123vh;
              margin: 20px;
              height: 62vh;
              overflow-y: scroll;
              border-radius: 5px;
            "
          >
            <table id="chatContents"></table>
          </div>
          <div style="display: flex; padding: 10px; margin-bottom: 5px">
            <input
              type="text"
              style="
                font-size: 30px;
                margin: 10px;
                width: 100vh;
                border-color: rgb(235, 235, 235);
                border-radius: 5px;
              "
              id="chatContent"
              placeholder="Type here..."
            />
            <button
              style="
                flex: 1;
                background-color: rgb(54, 153, 207);
                margin: 10px;
                width: 10px;
                color: white;
                border-radius: 5px;
              "
              onclick="sendChat()"
            >
              >
            </button>
          </div>
        </div>
      </div>
    </center>
    <%- include('partials/footer'); -%>
  </body>
  <%- include('partials/script'); -%>
  <script src="chat.js"></script>
</html>

            <button onclick="sidebarClose()" class="w3-bar-item w3-large">Close &times;</button>
            <a href="http://localhost:3000/home" class="w3-bar-item w3-button">Home</a>
            <a href="http://localhost:3000/online" class="w3-bar-item w3-button">Online users</a>
            <a href="http://localhost:3000/chart" class="w3-bar-item w3-button">Charts</a>
